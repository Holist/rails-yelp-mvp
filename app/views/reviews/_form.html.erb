<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
    <h1>Add a review for : <%= @restaurant.name %></h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content, as: :text, error: 'Content is mandatory, please write something'  %>
        <%= f.input :rating, collection: 0..5, error: 'Rating is madatory' %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
